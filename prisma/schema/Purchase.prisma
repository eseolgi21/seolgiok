model PurchaseItem {
  id          String   @id @default(cuid())
  date        DateTime @db.Date // 매입 일자
  
  category    String?  // 분류 (식자재, 비품, 기타 등)
  itemName    String   // 품목명
  amount      Int      // 금액
  note        String?  // 비고
  confirmed   Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
}
